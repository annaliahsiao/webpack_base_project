header
    position relative
    text-align center
    width 100%
    background-color #fff
    z-index 1000
    margin-bottom 3.3rem
    input[type="checkbox"]
        display none 
#logo
    display inline-block
    vertical-align middle
    text-align center
    width 50%
    max-width 130px
    background-repeat no-repeat
    background-size auto 100%
    background-image url(../images/logo.png)
    &:after
        display block
        content: ''
        padding-top 56.9%
#menu_bar
    + label
        position absolute
        left 0
        top 50%
        transform: translate(100%,-50%)
        width 20px
        height 20px
        cursor pointer
        i,o,u
            position absolute
            left 0
            width 100%
            height 3px
            background-color #464646
        i
            top 0
        o
            top 50%
        u
            top 100%
#member_login
    + label
        position absolute
        right 0
        top 50%
        width 30px
        transform: translate(-50%,-50%)
        background-image url(../images/member_menu.png)
        background-repeat no-repeat
        background-size 100%
        cursor pointer
        &:after
            display block
            content: ''
            padding-top 100%
#menu_list
    position absolute
    bottom 0
    left 0
    transform: translate(0,100%)
    width 100%
    font-size 0
    border-top: $border-gray 2px solid
    border-bottom: $border-gray 2px solid
    li
        display inline-block
        width 25%
        font-size 1rem
        text-align center
        background-color #fff
        height 3rem
        font-weight bolder
        a
            &:before
                display inline-block
                vertical-align sub
                content: ''
                background-repeat no-repeat
                background-size contain
                background-position center
                height 50%
                width 20%
                max-width 60px
                margin-right 5px
            &:after
                display inline-block
                vertical-align middle
                width 0
                height 100%
                content: ''
        &:nth-of-type(1)
            a
                &:before
                    background-image url(../images/icon_lab.png)
        &:nth-of-type(2)
            a
                &:before
                    background-image url(../images/icon_news.png)
        &:nth-of-type(3)
            a
                &:before
                    background-image url(../images/icon_photo.png)
        &:nth-of-type(4)
            a
                &:before
                    background-image url(../images/icon_shoppingcar.png)
.socal_media
    position fixed
    z-index 1001
    bottom 0
    right 0
    transform: translate(-20%,-40%)
    width 30%
    max-width 50px
    li
        margin-bottom 10px
        &:last-child
            margin-bottom 0

#user_login
    display none
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    z-index 999
    background-color $light_gray
    #user_form
        position absolute
        top 50%
        left 50%
        width 100%
        max-width 500px
        transform: translate(-50%,-35%)
        border: 1px solid $gray2
        background-color #f4f4f4
        box-shadow: 1px 1px 2px rgba(0,0,0,.2)
        padding 3rem 2rem
        box-sizing: border-box
    input
        display block
        width 90%
        margin: 0 auto
        outline: none
        background-color transparent
        border: none
        border-bottom: 1px solid $gray2
        line-height 2.5
        font-size 1.2rem
        margin-bottom 3rem
        border-radius: 0
    #login
        position relative
        display block
        width 100%
        margin 0 auto
        max-width initial
        background-color $gray
        border-radius: 50px
        line-height 2
        &:after
            position absolute
            top 50%
            right 0
            transform translate(-50%,-55%)
            display block
            content: 'â†’'
            font-size 2rem
footer
    position relative
    text-align center
    background-color $gray
    z-index 1000
    color: #fff
    line-height 3.5